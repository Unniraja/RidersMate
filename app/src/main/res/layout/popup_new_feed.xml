<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.solutions.techblaze.ridersmate.New_status_update">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:id="@+id/cardView7">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/cardView5">
                <com.facebook.login.widget.ProfilePictureView
                    android:id="@+id/user_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/user_name_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cardView5"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_toEndOf="@+id/cardView5"
                android:layout_toRightOf="@+id/cardView5"
                android:text="Unniraja" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/center_card">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/new_text"

            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Write here.."
            android:padding="10dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_card"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="9dp"
    android:layout_marginRight="9dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:id="@+id/cardView8">
            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:drawableRight="@drawable/ic_send"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:background="#ab47bc"
                android:text="Post" />
</android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/cardView8"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                app:srcCompat="@drawable/photo" />

            <ImageView
                android:id="@+id/loc_place"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                app:srcCompat="@drawable/placeholder" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
