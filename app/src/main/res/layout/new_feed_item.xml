<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">



                <android.support.v7.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="12dp">
                    <com.facebook.login.widget.ProfilePictureView
                        android:id="@+id/profilePictureView"

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"


                        />
                </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cardView4"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/cardView4"
                android:layout_toRightOf="@+id/cardView4"
                android:text="Name"
                android:textColor="#000" />



            <android.support.v7.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cardView4"
                android:layout_marginTop="6dp"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <ImageView
                    android:id="@+id/post_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bikesforlife"

                    />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/caption_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardView6"
                android:layout_alignStart="@+id/cardView6"
                android:layout_below="@+id/cardView6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="14dp"
                android:text="Lorem ipsum dolor sit amet"
                 />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/name"
                android:text="4 mins ago"
                android:textSize="8dp"
             />

            <TextView
                android:id="@+id/like_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/caption_text"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/cardView4"
                android:layout_toRightOf="@+id/cardView4"
                android:drawableLeft="@drawable/ic_normal_love"
                android:gravity="center"
                android:text="56 love"
                android:layout_marginBottom="10dp"
                 />

            <TextView
                android:id="@+id/comment_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/like_option"
                android:layout_alignBottom="@+id/like_option"
                android:layout_alignEnd="@+id/cardView6"
                android:layout_alignRight="@+id/cardView6"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:drawableLeft="@drawable/ic_comment"
                android:gravity="center"
                android:text="comments"
                android:layout_marginBottom="10dp"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>