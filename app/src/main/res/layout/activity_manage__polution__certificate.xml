<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.solutions.techblaze.ridersmate.Manage_Polution_Certificate"
    android:background="@drawable/gradient">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/cardView3">

        <Button
            android:id="@+id/add_pollution"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ab47bc"
            android:gravity="center"
            android:text="Add Polution Certificate"
            android:textAllCaps="false"
            android:textColor="#ffffff" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/no_motor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#681b1b"
        android:text="No pollution certificate Found"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_motor"
        android:layout_centerHorizontal="true"
        android:textColor="#50ffffff"
        android:layout_marginTop="13dp"
        android:text="Add one by pressing on the above button" />

    <ListView
        android:id="@+id/polution_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp" />

</RelativeLayout>
