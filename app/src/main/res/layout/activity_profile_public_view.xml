<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff7ff"
    tools:context="com.solutions.techblaze.ridersmate.Profile_public_view">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/user_profile"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textColor="#0c1128"
            android:fontFamily="@font/sansa"
            android:text="Unniraja" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:textColor="#9eaef5"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sansa"
            android:text="Vaikom,Kerala" />


        <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/textView15"
            android:drawableLeft="@drawable/ic_add_new"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_new"
            android:text="follow"
           android:gravity="left|center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
